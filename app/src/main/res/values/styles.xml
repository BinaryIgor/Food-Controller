<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ToolbarTitleStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/spLarge</item>
    </style>

    <style name="TitleStyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/spLarge</item>
    </style>

    <style name="DescriptionStyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/spMedium</item>
    </style>

    <style name="MainButtonStyle">
        <item name="android:textSize">@dimen/spLarge</item>
        <item name="cornersRadius">@dimen/dpLittle</item>
        <item name="color">@color/colorPrimaryDark</item>
        <item name="textColor">@android:color/white</item>
        <item name="frameWidth">@dimen/dpLittlest</item>
        <item name="frameColor">@color/colorPrimary</item>
        <item name="pressedColor">@color/colorPrimary</item>
        <item name="pressedTextColor">@android:color/white</item>
        <item name="pressedFrameColor">@color/colorPrimaryDark</item>
        <item name="android:padding">@dimen/dpMedium</item>
    </style>
</resources>
