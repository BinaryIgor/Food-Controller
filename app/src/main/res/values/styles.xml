<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ToolbarTitleStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/spLarge</item>
    </style>

    <style name="TitleStyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/spLarge</item>
    </style>

    <style name="MediumTitleStyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/spMediumLarge</item>
    </style>

    <style name="DescriptionStyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/spMedium</item>
    </style>

    <style name="MainButtonStyle">
        <item name="android:textSize">@dimen/spLarge</item>
        <item name="cornersRadius">@dimen/dpLittle</item>
        <item name="color">@color/colorPrimaryDark</item>
        <item name="textColor">@android:color/white</item>
        <item name="frameWidth">@dimen/dpLittlest</item>
        <item name="frameColor">@color/colorPrimary</item>
        <item name="pressedColor">@color/colorPrimary</item>
        <item name="pressedTextColor">@android:color/white</item>
        <item name="pressedFrameColor">@color/colorPrimaryDark</item>
        <item name="android:padding">@dimen/dpMedium</item>
    </style>

    <style name="SearchInputStyle">
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="PopUpStyle" parent="Widget.AppCompat.PopupMenu">
        <item name="android:textColor">@android:color/background_dark</item>
        <item name="android:itemBackground">@drawable/drop_down_popup_item</item>
        <item name="android:layout_marginEnd">@dimen/dpLarge</item>
    </style>
</resources>
