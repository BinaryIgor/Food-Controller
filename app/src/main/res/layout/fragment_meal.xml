<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/dpSmall">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dpMedium"
                android:orientation="horizontal">

            <ImageView
                    android:layout_width="@dimen/icon"
                    android:layout_gravity="center"
                    android:layout_height="@dimen/icon"
                    android:src="@drawable/clock"
                    android:layout_marginEnd="@dimen/dpSmall"
                    />

            <NumberPicker
                    android:id="@+id/h"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="@dimen/spLarge"
                    android:text="@string/colon"/>

            <NumberPicker
                    android:id="@+id/min"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>

            <ImageView
                    android:id="@+id/save"
                    android:layout_width="@dimen/icon"
                    android:layout_gravity="center"
                    android:layout_height="@dimen/icon"
                    android:src="@drawable/ok"
                    android:visibility="gone"
                    android:layout_marginStart="@dimen/dpSmall"
                    />
        </LinearLayout>

        <com.iprogrammerr.foodcontroller.view.CustomButton
                android:id="@+id/add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/MainButtonStyle"
                android:layout_marginBottom="@dimen/dpMedium"
                android:text="@string/add"/>

        <android.support.v7.widget.RecyclerView
                android:id="@+id/food"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

    </LinearLayout>
</layout>