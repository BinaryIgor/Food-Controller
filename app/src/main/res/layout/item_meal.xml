<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/adapter"
            android:layout_marginBottom="@dimen/dpSmall"
            android:padding="@dimen/dpSmall">

        <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/DescriptionStyle"
                tools:text="PosiÅ‚ek I"
                />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/DescriptionStyle"
                android:layout_marginStart="@dimen/dpLittle"
                android:layout_marginEnd="@dimen/dpSmall"
                android:text="@string/colon"
                />

        <TextView
                android:id="@+id/hour"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                style="@style/DescriptionStyle"
                tools:text="13:00"
                />

        <ImageView
                android:id="@+id/more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/more"
                />
    </LinearLayout>
</layout>